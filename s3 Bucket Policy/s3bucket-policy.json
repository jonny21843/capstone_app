{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "PublicWebsiteReadAccess",
            "Effect": "Allow",
            "Principal": "*",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::dev-feagans-capstone/*"
        },
        {
            "Sid": "PublicListUploadedFiles",
            "Effect": "Allow",
            "Principal": "*",
            "Action": "s3:ListBucket",
            "Resource": "arn:aws:s3:::dev-feagans-capstone",
            "Condition": {
                "StringLike": {
                    "s3:prefix": "uploadedfiles/*"
                }
            }
        },
        {
            "Sid": "PublicPutUploadedFiles",
            "Effect": "Allow",
            "Principal": "*",
            "Action": "s3:PutObject",
            "Resource": "arn:aws:s3:::dev-feagans-capstone/uploadedfiles/*"
        }
    ]
}